<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:background="@drawable/bac2">

    <ImageView
        android:id="@+id/image_product_details"
        android:transitionName="image"
        android:layout_width="325dp"
        android:layout_height="342dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/confiture" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="192dp"
        android:layout_height="63dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="372dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_product_details"
        app:srcCompat="@drawable/rectangl"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="117dp"
        android:layout_height="35dp"
        android:text="Confiture"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cercleprix"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:text="15 DT"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/description_product_details"
        android:layout_width="348dp"
        android:layout_height="74dp"
        android:layout_marginTop="44dp"
        android:text="High quality Tunisian jam made in home ..."
        android:textColor="@color/teal_300"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.108"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="331dp"
        android:layout_height="59dp"
        android:layout_marginBottom="36dp"
        android:text="Add to cart"
        app:backgroundTint="#4CAF50"
        app:icon="@drawable/ic_baseline_local_grocery_store_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/description_product_details"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/description_product_details"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>